##########################
# Ubuntu
##########################

$ sudo apt-get install mysql-server mysql-client php5-mysql
$ sudo service mysql restart
$ mysql -u reset -p


##########################
# Fedora
##########################

$ su -c 'yum install mysql mysql-server php-mysql'
$ su -c 'sudo systemctl start mysqld.service'
$ su -c 'sudo systemctl enable mysqld.service'
$ mysqladmin -u root password '****'
$ mysql -u root -p
